@model HealthCare.DAL.Models.Patient

@{
}


<h1>Add Patient</h1>

<form method="post" action="AddPatient" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="int" class="form-control" asp-for="Id">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Patient Name</label>
        <input type="text" class="form-control" asp-for="PatientName">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Patient Gender</label>
        <input type="text" class="form-control" asp-for="PatientGender">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Patient Age</label>
        <input type="number" class="form-control" asp-for="PatientAge">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>


</form>